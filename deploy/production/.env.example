# Production Environment Configuration for Beyond the AI Plateau
# Copy this file to .env and configure with actual production values

# Database Configuration
POSTGRES_DB=amysoft_production
POSTGRES_USER=amysoft_user
POSTGRES_PASSWORD=secure_production_password_change_me

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_change_me

# JWT Configuration
JWT_SECRET=secure_jwt_secret_change_me_minimum_32_characters
JWT_REFRESH_SECRET=secure_jwt_refresh_secret_change_me_minimum_32_characters

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Service Configuration
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_sendgrid_api_key

# CDN Configuration
CDN_BASE_URL=https://cdn.amysoft.tech

# Analytics Configuration
ANALYTICS_API_KEY=your_analytics_api_key

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=secure_grafana_password_change_me

# Application Configuration
LOG_LEVEL=info
NODE_ENV=production

# SSL/TLS Configuration
SSL_EMAIL=admin@amysoft.tech
SSL_STAGING=false

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=amysoft-backups
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key

# Security Configuration
CORS_ORIGINS=https://amysoft.tech,https://www.amysoft.tech,https://app.amysoft.tech,https://admin.amysoft.tech
ALLOWED_HOSTS=amysoft.tech,www.amysoft.tech,app.amysoft.tech,admin.amysoft.tech,api.amysoft.tech

# Performance Configuration
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
QUERY_TIMEOUT=5000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_BACKUPS=true
ENABLE_SSL_REDIRECT=true

# External Services
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# API Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_MAX_AUTH=20

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_PATH=/data/amysoft/uploads

# Session Configuration
SESSION_SECRET=secure_session_secret_change_me
SESSION_TIMEOUT=3600000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000