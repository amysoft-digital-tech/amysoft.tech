      }
    ]
  },
  "automatedActions": [
    {
      "trigger": "churn_rate_monthly > 8",
      "action": "send_retention_campaign",
      "parameters": {
        "campaign": "high_value_retention",
        "segment": "at_risk_customers"
      }
    },
    {
      "trigger": "customer_health_score < 50",
      "action": "create_support_ticket",
      "parameters": {
        "priority": "high",
        "category": "customer_success"
      }
    },
    {
      "trigger": "api_response_time_p95 > 500",
      "action": "scale_infrastructure",
      "parameters": {
        "service": "api",
        "scaling_factor": 1.5
      }
    },
    {
      "trigger": "daily_active_users < 100",
      "action": "send_engagement_email",
      "parameters": {
        "template": "re_engagement",
        "segment": "inactive_users"
      }
    }
  ]
}