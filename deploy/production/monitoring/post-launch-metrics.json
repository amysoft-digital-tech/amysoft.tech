      }
    },
    "milestones": [
      {
        "name": "First 1000 Users",
        "target": 1000,
        "metric": "total_users",
        "deadline": "2025-01-15"
      },
      {
        "name": "First $10K MRR",
        "target": 10000,
        "metric": "monthly_recurring_revenue",
        "deadline": "2025-02-01"
      },
      {
        "name": "50% Chapter Completion",
        "target": 50,
        "metric": "chapter_completion_rate",
        "deadline": "2025-02-15"
      },
      {
        "name": "1000 Active Subscribers",
        "target": 1000,
        "metric": "active_subscriptions",
        "deadline": "2025-03-01"
      },
      {
        "name": "$25K MRR",
        "target": 25000,
        "metric": "monthly_recurring_revenue",
