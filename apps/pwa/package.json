{
  "name": "pwa",
  "version": "1.0.0",
  "description": "Beyond the AI Plateau - Learning Platform PWA",
  "scripts": {
    "build": "nx build pwa",
    "serve": "nx serve pwa",
    "test": "nx test pwa",
    "test:pwa": "jest --config=jest.config.pwa.js --testPathPattern=src/testing/",
    "test:performance": "jest --config=jest.config.pwa.js --testPathPattern=performance",
    "test:a11y": "jest --config=jest.config.pwa.js --testPathPattern=accessibility",
    "test:cross-browser": "playwright test --config=playwright.config.ts",
    "test:mobile": "playwright test --config=playwright.mobile.config.ts",
    "test:smoke": "jest --config=jest.config.pwa.js --testPathPattern=smoke",
    "test:watch": "nx test pwa --watch",
    "test:coverage": "nx test pwa --coverage",
    "test:ci": "nx test pwa --configuration=ci --coverage --watchAll=false",
    "lint": "nx lint pwa",
    "type-check": "tsc --noEmit --project tsconfig.json",
    "e2e": "nx e2e pwa-e2e",
    "lighthouse": "lhci autorun --config=lighthouserc.json",
    "lighthouse:desktop": "lighthouse http://localhost:8100 --preset=desktop --output=html --output-path=lighthouse-reports/desktop-report.html",
    "lighthouse:mobile": "lighthouse http://localhost:8100 --preset=mobile --output=html --output-path=lighthouse-reports/mobile-report.html",
    "pwa-audit": "npm run lighthouse && npm run test:pwa",
    "security:audit": "npm audit --audit-level=moderate",
    "security:snyk": "snyk test",
    "performance:clinic": "clinic doctor -- node dist/main.js",
    "performance:autocannon": "autocannon -c 10 -d 30 http://localhost:8100",
    "a11y:axe": "axe http://localhost:8100 --exit --save a11y-report.json",
    "build:analyze": "nx build pwa --configuration=production --stats-json && npx webpack-bundle-analyzer dist/apps/pwa/stats.json",
    "clean": "rm -rf dist coverage test-results lighthouse-reports .nyc_output",
    "clean:cache": "rm -rf .nx/cache node_modules/.cache",
    "install:playwright": "npx playwright install",
    "install:lighthouse": "npm install -g @lhci/cli",
    "setup:test": "npm run install:playwright && npm run install:lighthouse",
    "docker:build": "docker build -t pwa-app .",
    "docker:run": "docker run -p 8100:8100 pwa-app",
    "capacitor:add:ios": "npx cap add ios",
    "capacitor:add:android": "npx cap add android",
    "capacitor:sync": "npx cap sync",
    "capacitor:build:ios": "npx cap build ios",
    "capacitor:build:android": "npx cap build android",
    "capacitor:run:ios": "npx cap run ios",
    "capacitor:run:android": "npx cap run android"
  },
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@angular/service-worker": "^17.0.0",
    "@capacitor/android": "^5.0.0",
    "@capacitor/app": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/haptics": "^5.0.0",
    "@capacitor/ios": "^5.0.0",
    "@capacitor/keyboard": "^5.0.0",
    "@capacitor/push-notifications": "^5.0.0",
    "@capacitor/status-bar": "^5.0.0",
    "@ionic/angular": "^7.0.0",
    "@ionic/angular-toolkit": "^11.0.0",
    "ionicons": "^7.0.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular-eslint/builder": "^17.0.0",
    "@angular-eslint/eslint-plugin": "^17.0.0",
    "@angular-eslint/eslint-plugin-template": "^17.0.0",
    "@angular-eslint/schematics": "^17.0.0",
    "@angular-eslint/template-parser": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@angular/language-service": "^17.0.0",
    "@capacitor/cli": "^5.0.0",
    "@ionic/angular-toolkit": "^11.0.0",
    "@nx/angular": "^17.0.0",
    "@nx/jest": "^17.0.0",
    "@nx/workspace": "^17.0.0",
