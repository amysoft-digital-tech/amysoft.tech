# Production Environment Variables
# Copy this file to .env.prod and fill in actual values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Security
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password

# Payment Processing
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key

# Email Service
EMAIL_SERVICE_KEY=your_email_service_api_key
SMTP_HOST=smtp.your-email-provider.com
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-s3-bucket-name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/amysoft.tech.crt
SSL_KEY_PATH=/etc/ssl/private/amysoft.tech.key

# Monitoring
MONITORING_ENABLED=true
LOG_LEVEL=info

# Application URLs (Production)
DOMAIN=amysoft.tech
ADMIN_URL=https://admin.amysoft.tech
API_URL=https://api.amysoft.tech
WEBSITE_URL=https://www.amysoft.tech
PWA_URL=https://app.amysoft.tech

# CDN Configuration (if using)
CDN_URL=https://cdn.amysoft.tech

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
HOTJAR_ID=your_hotjar_id

# Social Authentication (if implemented)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Third-party Integrations
SENTRY_DSN=https://your_sentry_dsn_here
INTERCOM_APP_ID=your_intercom_app_id